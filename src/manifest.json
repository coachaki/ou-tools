{
  "name": "OU Tools",
  "version": "0.0.1", // big-features.small-features.bugfixes
  "description": "Tools for doing mundane tasks inside OU Campus.",
  "manifest_version": 2, // this must be version 2

  "permissions": ["activeTab", "declarativeContent", "storage", "cookies", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*.cms.omniupdate.com/*", "https://*.cms.omniupdate.com/*"],
      "include_globs": ["*.cms.omniupdate.com/10/*"],
      "js": ["js/ouapi.js", "js/contentscript.js"]
    }
  ],
  "icons": {
    "16": "img/icons/ou-tools-16.png",
    "32": "img/icons/ou-tools-32.png",
    "48": "img/icons/ou-tools-48.png",
    "128": "img/icons/ou-tools-128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "img/icons/ou-tools-16.png",
      "32": "img/icons/ou-tools-32.png",
      "48": "img/icons/ou-tools-48.png",
      "128": "img/icons/ou-tools-128.png"
    },
    "default_popup": "popup.html"
  }
}
